<record id="donation_form" model="ir.ui.view">
    <field name="name">donation.form</field>
    <field name="model">donation.donation</field>
    <field name="arch"  type="xml">
        <form string="Donation">
            <header>
                <button type="object" name="transfer" string="Transfer"
                    class="oe_highlight" 
                    attrs="{'invisible': [('state','not in',1)]}"
                    groups="donation.group_donation_user"/>
                <button type="object" name="validate" string="Validate"
                    class="oe_highlight" 
                    attrs="{'invisible': [('state','not in',2)]}"
                    groups="donation.group_donation_finance"
                    invisible="context.get('recurring_view')"/>
                <button type="object" name="to_bank" string="To Bank"
                    class="oe_highlight" 
                    attrs="{'invisible': [('state','not in',3)]}"
                    groups="donation.group_donation_finance"
                    invisible="context.get('recurring_view')"/>
                <button type="object" name="cancel2draft"
                    string="Back to Draft" 
                    attrs="{'invisible': [('state','not in',4)]}"
                    groups="donation.group_donation_finance"/>
                <button type="object" name="done2cancel" string="Cancel"
                    groups="donation.group_donation_finance"
                    attrs="{'invisible': [('state','not in',3)]}"/>
                <button type="object" name="save_default_values"
                    string="Save Default Values" invisible="1"/>
                <field name="state" widget="statusbar"
                    invisible="context.get('recurring_view')"/>
            </header>
            <sheet>
                <group name="main">
                    <group name="manual">
                        <field name="name" string="Donation Reference" readonly="1"/>
                        <field name="payment_ref" string="Donation Reference" invisible="1"/>
                        <field name="donation_section" string="Section" attrs="{'readonly': [('is_editable','=', True)]}"/>
                        <field name="donation_by" attrs="{'readonly': [('is_editable','=', True)]}"/>
                        
                        <field name="journal_id" widget="selection" readonly="1" invisible="1"/> 
                        <field name="currency_id" groups="base.group_multi_currency"/>
                        <field name="is_readonly" invisible="1"/>
                        <field name="is_editable" invisible="1"/>
                    </group>
                    <group>
                        <field name="donation_date" required="1" attrs="{'readonly': [('is_editable','=', True)]}"/>
                        <field name='product_id' required="1" attrs="{'readonly': [('is_editable','=', True)]}"/>
                        <field name="company_id" attrs="{'readonly': [('is_editable','=', True)]}"/>
                        <field name="account_bank_id" attrs="{'required':[('state','=',3)],'invisible':[('state','not in',3)]}"/>
                        <field name="account_id" readonly="1" invisible="1"/>
                        <field name="check_total" groups="donation.group_donation_check_total"/>
                    </group>
                    <group name="auto" invisible="0">
                        <field name="partner_id" domain="[('is_donor', '=', True)]" invisible="1"/>
                        <field name="commercial_partner_id" invisible="1"/>
                        <field name="campaign_id" required="0" invisible="1"/>
                        <field name="gov_id" invisible="1"/>
                        <field name="donation_place" invisible="1"/>
                        <field name="donation_method" invisible="1"/>
                        <field name="tags_id" widget="many2many_tags" invisible="1"/>
                        <field name="tax_receipt_option" invisible="1"/>
                        <field name="tax_receipt_total" invisible="1"/>
                        <field name="tax_receipt_id" invisible="1"/>
                    </group>
                </group>
                <notebook>
                    <page string="Donation Lines" name="lines">
                        <field name="line_ids" nolabel="1">
                            <tree>
                                <field name="partner_id" domain="[('is_donor', '=', True)]"/>
                                <field name="recipt_number"/>
                                <field name="quantity"/>
                                <field name="unit_price"/>
                                <field name="it_amount"/>
                                <field name="amount" groups="donation.group_donation_user"/>
                                <field name="fundstream_id" domain="[('fund_active', '=', True)]" required="1"/>
                                <field name="donation_place" required="1" string="Point"/>
                                <field name="donation_collector" domain="[('is_collector', '=', True)]"/>
                                <field name="donation_method" invisible="0" options="{'limit': 10, 'no_create': true, 'no_create_edit': true}"/>
                                
                                <field name="treasury_recipt"/>
                                
                                <field name="vmachine_id" invisible="1"/>
                                <field name="company_id" readonly="1" invisible="1"/>
                                <field name="analytic_account_id" invisible="1" options="{'limit': 10, 'no_create': true, 'no_create_edit': true}"/>
                                <field name="analytic_account2" invisible="1" options="{'limit': 10, 'no_create': true, 'no_create_edit': true}" />
                                <field name="tags_id" widget="many2many_tags" readonly="0" invisible="1" options="{'limit': 10, 'no_create': true, 'no_create_edit': true}"/>
                                <field name="account_id" invisible="1" options="{'limit': 10, 'no_create': true, 'no_create_edit': true}"/>
                                <field name="in_kind" invisible="1"/>
                                <field name="product_id" invisible="1" options="{'limit': 10, 'no_create': true, 'no_create_edit': true}"/>
                            </tree>
                            <form string="Donation Line">
                                <group>
                                    <group>
                                        <field name="is_editable" invisible="1"/>
                                        <field name="partner_id" domain="[('is_donor', '=', True)]" attrs="{'readonly': [('is_editable','=', True)]}"/>
                                        <field name="recipt_number" attrs="{'readonly': [('is_editable','=', True)]}"/>
                                        <field name="treasury_recipt"/>
                                        <field name="quantity" attrs="{'readonly': [('is_editable','=', True)]}"/>
                                        <field name="unit_price" attrs="{'readonly': [('is_editable','=', True)]}"/>
                                        <field name="it_amount"/>
                                        <field name="amount" groups="donation.group_donation_finance"/>
                                    </group>
                                    <group>
                                        <field name="fundstream_id" domain="[('fund_active', '=', True)]" required="1" attrs="{'readonly': [('is_editable','=', True)]}"/>
                                        <field name="donation_place" string="Point" attrs="{'readonly': [('is_editable','=', True)]}"/>
                                        <field name="donation_collector" domain="[('is_collector', '=', True)]" attrs="{'readonly': [('is_editable','=', True)]}"/>
                                        <field name="donation_method" options="{'limit': 10, 'no_create': true, 'no_create_edit': true}" required="1" attrs="{'readonly': [('is_editable','=', True)]}"/>
                                        <field name="donation_method_tag" invisible="1"/>
                                        <field name="payment_type" attrs="{'readonly': [('is_editable','=', True)]}"/>
                                        <field name="bank_id" attrs="{'required':[('payment_type','=',2)],'invisible':[('payment_type','not in',2)],'readonly': [('is_editable','=', True)]}"/>
                                        <field name="chech_number" attrs="{'required':[('payment_type','=',2)],'invisible':[('payment_type','not in',2)],'readonly': [('is_editable','=', True)]}"/>
                                        <field name="due_date" attrs="{'required':[('payment_type','=',2)],'invisible':[('payment_type','not in',2)],'readonly': [('is_editable','=', True)]}"/>
                                        <field name="vmachine_id" attrs="{'readonly': [('is_editable','=', True)]}"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="company_id" readonly="1" invisible="1"/>
                                    <field name="product_id" invisible="1" options="{'limit': 10, 'no_create': true, 'no_create_edit': true}"/>
                                    <field name="analytic_account_id" invisible="1" options="{'limit': 10, 'no_create': true, 'no_create_edit': true}"/>
                                    <field name="analytic_account2" invisible="1" options="{'limit': 10, 'no_create': true, 'no_create_edit': true}" />
                                    <field name="account_id" invisible="1" options="{'limit': 10, 'no_create': true, 'no_create_edit': true}"/>
                                    <field name="in_kind" invisible="1"/>
                                    <field name="tags_id" widget="many2many_tags" invisible="1" readonly="0" options="{'limit': 10, 'no_create': true, 'no_create_edit': true}"/>
                                </group>
                            </form>
                        </field>
                        <group>
                            <group name="subtotal" class="oe_subtotal_footer oe_left">
                                <field name="it_amount_total" string=" IT Total"
                                   class="oe_subtotal_footer_separator"/>
                            </group>
                            <group name="subtotal" class="oe_subtotal_footer oe_right">
                                <field name="amount_total" string="Total"
                                   class="oe_subtotal_footer_separator"/>
                            </group>
                        </group>
                        <group name="layout_fix">
                            <field name="company_currency_id" invisible="1"/>
                        </group>                    
                    </page>
                    <page string="Other Information" name="other" group="donation.group_donation_finance">
                        <group name="other">
                            <field name="move_id"/>
                            <field name="move_id_bank"/>
                            <field name="move_analytic_id"/>
                            <field name="amount_total_company_currency"
                                groups="base.group_multi_currency"/>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
</record>

<record id="donation_tree" model="ir.ui.view">
    <field name="name">donation.tree</field>
    <field name="model">donation.donation</field>
    <field name="arch"  type="xml">
        <tree string="Donation" colors="blue:state==1;purple:state==4;green:state==2">
            <field name="name"/>
            <field name="number" invisible="1"/>
            <field name="donation_date"/>
            <field name="donation_by" invisible="context.get('partner_view')"/>
            <field name="company_id" groups="base.group_multi_company"/>
            <field name="donation_section"/>
            <field name='product_id'/>
            <field name="it_amount_total" string=" IT Total"/>
            <field name="amount_total"/>
            <field name="state" invisible="context.get('recurring_view')"/>
            <field name="tags_id" invisible="1"/>
            <field name="journal_id" invisible="1"/>
            <field name="currency_id" invisible="1" groups="base.group_multi_currency"/>
        </tree>
    </field>
</record>


<record id="donation_search" model="ir.ui.view">
    <field name="name">donation.search</field>
    <field name="model">donation.donation</field>
    <field name="arch"  type="xml">
        <search string="Search Donations">
            <filter name="draft" string="Draft" domain="[('state', '=', 1)]" />
            <filter name="done" string="Done" domain="[('state', '=', 3)]" />
            <field name="number"/>
            <field name="product_id"/>
            <field name="company_id"/>
            <field name="donation_date"/>
            <field name="donation_by"/>
            <field name="donation_section"/>
            <field name="partner_id" invisible="1"/>
            <group string="Group By" name="groupby">
                <filter name="date_groupby" string="Date" context="{'group_by': 'donation_date'}"/>
                <filter name="product_groupby" string="Product" context="{'group_by': 'product_id'}"/>
                <filter name="state_groupby" string="State" context="{'group_by': 'state'}"/>
                <filter name="currency_groupby" string="Currency" context="{'group_by': 'currency_id'}"/>
                <filter name="company_groupby" string="Location" context="{'group_by': 'company_id'}"/>
                <filter name="partner_groupby" string="Partner" context="{'group_by': 'partner_id'}"/>
                <filter name="journal_groupby" string="Payment Method" context="{'group_by': 'journal_id'}" invisible="1"/>
                <filter name="tax_receipt_option_groupby" string="Tax Receipt Option" context="{'group_by': 'tax_receipt_option'}" invisible="1"/>
                <filter name="commercial_partner_groupby" string="Parent Partner" context="{'group_by': 'commercial_partner_id'}" invisible="1"/>
                <filter name="partner_country_groupby" string="Partner Country" context="{'group_by': 'country_id'}" invisible="1"/>
                <filter name="campaign_groupby" string="Campaign" context="{'group_by': 'campaign_id'}" invisible="1"/>
            </group>
        </search>
    </field>
</record>

